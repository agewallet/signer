{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@navigation/*": ["src/navigation/*"],
      "@config/*": ["src/config/*"],
      "@scenes/*": ["src/scenes/*"],
      "@utils/*": ["src/utils/*"],
      "@store/*": ["src/store/*"],
      "@hooks/*": ["src/hooks/*"],
      "@modals/*": ["src/modals/*"]
    }
  }
}
